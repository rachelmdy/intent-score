<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MatchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Basketball Stars"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textrond"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Round: "
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/textView"/>
        <TextView
            android:id="@+id/rondke"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toEndOf="@id/textrond"
            />

        <ImageView
            android:id="@+id/team1_logo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textrond"
            app:srcCompat="@drawable/logo"
            />
        <TextView
            android:id="@+id/nmtv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Team 1"
            android:textAlignment="center"
            android:textSize="10pt"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@id/team1_logo"
            app:layout_constraintStart_toStartOf="@+id/guideline2"/>
        <TextView
            android:id="@+id/skorteam1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:textSize="80dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/team1_logo"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/nmtv1"
            />

        <Button
            android:id="@+id/tambah1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="7pt"
            android:background="@color/blue"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/team1_logo"
            app:layout_constraintStart_toStartOf="@id/guideline1"
            />
        <Button
            android:id="@+id/tambah2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="+2"
            android:textSize="7pt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            app:layout_constraintStart_toEndOf="@id/tambah1"
            app:layout_constraintTop_toBottomOf="@id/team1_logo"
            />
        <Button
            android:id="@+id/tambah3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="+3"
            android:textSize="7pt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            app:layout_constraintStart_toEndOf="@id/tambah2"
            app:layout_constraintTop_toBottomOf="@id/team1_logo"
            />
        <Button
            android:id="@+id/reset"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Reset Skor"
            android:textSize="5pt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/red"
            app:layout_constraintStart_toEndOf="@id/tambah3"
            app:layout_constraintTop_toBottomOf="@id/team1_logo"
            />

        <TextView
            android:id="@+id/vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reset"/>

        <Button
            android:id="@+id/btn_cek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="112dp"
            android:layout_marginRight="20dp"
            android:background="@color/blue"
            android:text="Cek Hasil"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reset2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_cek"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/team2_logo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintHorizontal_bias="0.012"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vs"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/nmtv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Team 2"
            android:textSize="10pt"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@id/team2_logo"
            app:layout_constraintStart_toStartOf="@+id/guideline2"/>
        <TextView
            android:id="@+id/skorteam2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:textSize="80dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/team2_logo"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/nmtv1"
            />

        <Button
            android:id="@+id/tambah1.2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="7pt"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/team2_logo"
            app:layout_constraintStart_toStartOf="@id/guideline1"
            />
        <Button
            android:id="@+id/tambah2.2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="+2"
            android:textSize="7pt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            app:layout_constraintStart_toEndOf="@id/tambah1.2"
            app:layout_constraintTop_toBottomOf="@id/team2_logo"
            />
        <Button
            android:id="@+id/tambah3.2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="+3"
            android:textSize="7pt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            app:layout_constraintStart_toEndOf="@id/tambah2.2"
            app:layout_constraintTop_toBottomOf="@id/team2_logo"
            />
        <Button
            android:id="@+id/reset2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Reset Skor"
            android:textSize="5pt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/red"
            app:layout_constraintStart_toEndOf="@id/tambah3.2"
            app:layout_constraintTop_toBottomOf="@id/team2_logo"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>